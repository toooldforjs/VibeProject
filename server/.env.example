# База данных (обязательно)
DB_HOST=localhost
DB_PORT=5432
DB_USER=vibe_user
DB_PASSWORD=vibe_password
DB_NAME=vibe_db

# Порт сервера (опционально, по умолчанию 3001)
PORT=3001

# Ключ шифрования для Jira PAT и GigaChat в БД (обязательно для сохранения настроек)
# Минимум 16 символов
ENCRYPTION_KEY=ваш-секретный-ключ-минимум-16-символов

# Версия Jira REST API (опционально: 3 для Jira Cloud)
# JIRA_API_VERSION=3

# Переменные JIRA_* и GIGACHAT_* в .env не используются:
# Jira и GigaChat настраиваются в приложении (Настройки), данные хранятся в БД.
